#!/usr/bin/bash

# Start swwww
swww query || swww init

# Figure out which Waybar theme is set
THEMEIS=$(readlink -f ~/.config/waybar/style.css | cut -d '-' -f2)

# Show the correct wallpaper based on the theme
if [ $THEMEIS == "dark.css" ]; then
    random_wallpaper=$(shuf -n 1 -e ~/.config/hypr/dark-wallpapers/*.jpg)
    swww img "$random_wallpaper"
else
    random_wallpaper=$(shuf -n 1 -e ~/.config/hypr/light-wallpapers/*.jpg)
    swww img "$random_wallpaper"
    
fi

